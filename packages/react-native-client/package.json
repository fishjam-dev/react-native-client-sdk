{
  "name": "@fishjam-dev/react-native-client",
  "version": "0.3.0",
  "description": "A React Native client for Membrane WebRTC server.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "format:fix": "prettier --write . --ignore-path ./.eslintignore",
    "format:check": "prettier --check . --ignore-path ./.eslintignore",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "test": "expo-module test",
    "prepare": "expo-module prepare",
    "prepublishOnly": "expo-module prepublishOnly",
    "expo-module": "expo-module",
    "open:ios": "open -a \"Xcode\" example/ios",
    "open:android": "open -a \"Android Studio\" example/android",
    "release": "release-it",
    "releaseAppAndroid": "cd example/android && fastlane deploy",
    "releaseAppIos": "cd example/ios && fastlane deploy",
    "docs": "sed 's/\\.github\\/images/media/g' README.md > README_docs.md && typedoc src/index.tsx --media ./.github/images --readme README_docs.md && rm README_docs.md",
    "typecheck": "yarn tsc --noEmit && cd example && yarn tsc --noEmit"
  },
  "keywords": [
    "react-native",
    "expo",
    "@fishjam-dev/react-native-client",
    "MembraneWebRTC",
    "Fishjam"
  ],
  "repository": "https://github.com/fishjam-dev/react-native-client-sdk",
  "author": "Software Mansion (https://swmansion.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/fishjam-dev/react-native-client-sdk/issues"
  },
  "homepage": "https://github.com/fishjam-dev/react-native-client-sdk#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "phoenix": "^1.7.6",
    "promise-fs": "^2.1.1",
    "protobufjs": "^7.2.4"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/lodash": "^4.14.195",
    "@types/phoenix": "^1.6.0",
    "@types/promise-fs": "^2.1.2",
    "@types/react": "^18.0.25",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "expo": "^50.0.17",
    "expo-module-scripts": "^3.0.4",
    "expo-modules-core": "~1.11.8",
    "husky": "^9.0.10",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jest-expo": "^50.0.2",
    "jest-websocket-mock": "^2.4.0",
    "lint-staged": "^15.2.2",
    "pod-install": "^0.2.0",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.4",
    "release-it": "^17.0.3",
    "typedoc": "^0.25.7",
    "typedoc-plugin-mark-react-functional-components": "^0.2.2",
    "typescript": "5.3.x",
    "ts-proto": "^1.176.0"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "jest-expo",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "testEnvironment": "jsdom"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "lint-staged": {
    "*.(js|ts|tsx)": [
      "yarn format:check",
      "yarn lint:check"
    ]
  }
}
